<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label_number_pres"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="20"
        android:textSize="42sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@drawable/separator"
        android:dividerPadding="4dp"
        android:showDividers="middle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_issuedByDoctor_pres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выдан : Врачом 25,10,01" />

        <TextView
            android:id="@+id/label_description_pres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание" />

        <TextView
            android:id="@+id/label_data_pres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата выдачи: " />

        <TextView
            android:id="@+id/label_duration_pres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Действует: 3 мес" />
    </LinearLayout>
</LinearLayout>